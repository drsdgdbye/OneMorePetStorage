<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="LoginScene" fx:controller="sample.LoginController"
      xmlns:fx="http://javafx.com/fxml" alignment="center">
    <ImageView>
        <Image url="/dog_box.png"/>
        <VBox.margin>
            <Insets bottom="50.0"/>
        </VBox.margin>
    </ImageView>
    <TextField fx:id="login" maxWidth="200" promptText="Login">
        <VBox.margin>
            <Insets bottom="10.0"/>
        </VBox.margin>
    </TextField>
    <PasswordField fx:id="password" maxWidth="200" promptText="Password"/>
    <Button fx:id="authorization" onAction="#auth" prefWidth="200" text="Authorization">
        <opaqueInsets>
            <Insets/>
        </opaqueInsets>
        <VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
    </Button>
</VBox>